<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clSignInMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp80"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:background="@drawable/grayborder"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp15"
                android:src="@mipmap/imgusername" />

            <View
                android:layout_width="@dimen/dp0.7"
                android:layout_height="@dimen/dp23"
                android:layout_marginBottom="@dimen/dp7"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginTop="@dimen/dp7"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/etSignInUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/user_name"
                android:inputType="text"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/hintColor"
                android:textSize="@dimen/generalTextSizeSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/grayborder"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp15"
                android:src="@mipmap/imgpassword" />

            <View
                android:layout_width="0.7dp"
                android:layout_height="23dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginTop="@dimen/dp7"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/etSignInPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/hintColor"
                android:textSize="@dimen/generalTextSizeSmall" />
        </LinearLayout>

        <Button
            android:id="@+id/btSignInSignIn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/generalButtonSize"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/button_click"
            android:paddingLeft="@dimen/dp80"
            android:paddingRight="@dimen/dp80"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@drawable/button_click"
            android:textSize="@dimen/generalTextSizeSmall"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSignInForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/for_pass"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/generalTextSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:text="@string/or"
                android:textColor="@color/black"
                android:textSize="@dimen/generalTextSizeSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSignInForgotEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/forgot_email"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/generalTextSizeSmall"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:text="@string/don_t_you_have_account_yet_signup_here"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/btSignInSignUp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/generalButtonSize"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/button_click"
            android:paddingLeft="@dimen/dp80"
            android:paddingRight="@dimen/dp80"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@drawable/button_click"
            android:textSize="@dimen/generalTextSizeSmall"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

